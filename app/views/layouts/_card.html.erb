    <%= cl_image_tag ninja.photo.key, width: 287, height: 250, gravity: "auto", crop: :fill, class:"card-img-top" %>
  <div class="card-body">
    <% ninja.rating.times do %>
      <i class="fas fa-star text-warning"></i>
    <% end %>
    <% (5 - ninja.rating).times do %>
      <i class="fas fa-star text-muted"></i>
    <% end %>
    <h5 class="card-title text-white text-center bg-secondary opacity-75 rounded p-1"><%= ninja.name %></h5>
