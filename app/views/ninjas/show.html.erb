<div class="card-category" data-controller="sound"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @ninja.photo.key, height: 300, crop: :fill %>')"
>
  <div class="card">
    <h1 class="bg-secondary opacity-75 text-white px-5 mt-2"><%=@ninja.name%></h1>
    <p class="mt-4"><strong>Description</strong> : <%=@ninja.description%></p>
    <p class="mt-3">Lieu : <%=@ninja.address%></p>
    <div class="d-flex justify-content-end">
      <p class="mt-4">Prix : <strong><%=@ninja.price%>€</strong>/mission</p>
    </div>
  </div>
  <div class="card" data-controller="sound">
    <h2>Réserver maintenant</h2>
    <%= render "reservation_form", reservation: @reservation%>
  </div>
</div>


  <h1 class="mt-5 mb-2 text-white text-center"><u>Avis</u></h1>

  <% if @reviews.empty? %>
    <div class="d-flex justify-content-center">
      <p class="text-center mt-4 bg-light bg-opacity-10 shadow" style="color: black; padding: 30px; width: 300px">Oups, pas encore d'avis</p>
    </div>
  <% else %>
    <div class="d-flex justify-content-center"  style="heigth: 500px">
      <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel" style="width: 500px">
        <div class="carousel-inner">
          <% @reviews.each do |review|%>
            <div class="carousel-item active" data-bs-interval="10000">
              <div class="col">
                <div class="card-category card-body">
                  <div class="text-center mt-4 bg-white shadow rounded" style="color: black; padding: 30px; width: 300px">
                    <p>Mission: <%= review.reservation.mission %></p>
                    <p><em><%= review.content%></em></p>
                    <% review.score.times do %>
                        <i class="fas fa-star text-warning"></i>
                    <%end%>
                  </div>
                </div>
              </div>
            </div>
          <%end%>
        <div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  <%end%>
