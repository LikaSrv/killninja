<div class="card-category" data-controller="sound"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @ninja.photo.key, height: 300, crop: :fill %>')"
>
  <div class="card">
    <h1 class="bg-secondary opacity-75 text-white px-5 mt-2"><%=@ninja.name%></h1>
    <p class="mt-4"><strong>Description</strong> : <%=@ninja.description%></p>
    <p class="mt-3">Lieu : <%=@ninja.address%></p>
    <div class="d-flex justify-content-end">
      <p class="mt-4">Prix : <strong><%=@ninja.price%>€</strong>/mission</p>
    </div>
  </div>
  <div class="card" data-controller="sound">
    <h2>Réserver maintenant</h2>
    <%= render "reservation_form", reservation: @reservation%>
  </div>
</div>
