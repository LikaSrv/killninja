<div class="banner">
  <div class="container">
    <h1 class="text-center">Choisissez votre ninja !</h1>
  </div>
</div>

<div class="row" style="margin: 15px">
  <div class="col-8 text-center mt-3">
    <div class="row d-flex justify-content-center">
      <% @ninjas.each do |ninja| %>
        <div class=" col-12 col-sm-6 col-lg-4 m-3">
          <%= render "/layouts/card", ninja: ninja %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-12 col-sm-4">
    <%= render "map" %>
  </div>
</div>
