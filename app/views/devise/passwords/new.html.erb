<div class="devise-container mt-5">
  <h2 class="mb-3">Mot de passe oublié?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions d-flex justify-content-center mb-3 mt-4">
      <%= f.button :submit, "
  Envoyez-moi les instructions de réinitialisation du mot de passe", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
