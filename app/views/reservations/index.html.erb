<br>
<h1 class="text-center mt-4 text-white">Mes réservations</h1>

<div class="d-flex justify-content-center">
  <div class="row">
    <% if @reservations.empty? %>
      <div class="col-12" style="height: 200px">
        <p class="text-center mt-4 bg-light bg-opacity-10 shadow text-white" style="color: black; padding: 30px; width: 300px">Vous n'avez pas encore de réservation. Faites votre première réservation ! </p>
      </div>
    <% else %>
      <% @reservations.each do |reservation|%>
        <div class="col-2 card p-0 rounded-5" style="height: 300px; width : 300px" >
          <a href="<%= new_reservation_review_path(reservation) %>" class="text-decoration-none">
            <div class=" p-5 rounded-5" style="background-image: url('<%= cl_image_path reservation.ninja.photo.key%>'); height: 300px">
              <h3 style="color: white"><%= reservation.ninja.name %></h3>
              <h3 style="color: white">Mission : <%= reservation.mission %></h3>
              <p style="color: white"><%= reservation.date%></p>
              <u class="text-white">Qu'avez vous pensez de la prestation?</u>
            </div>
          </a>
        </div>
      <%end%>
    <% end %>
  </div>
</div>
